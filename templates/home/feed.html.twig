{% extends 'base.html.twig' %}

{% block title %}Acceuil / Qwitter{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto space-y-8">
        
        {# Header de la page #}
        <header class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-slate-800">Accueil</h1>
            <div class="w-8 h-8 rounded-full bg-slate-200"></div> {# Placeholder avatar user #}
        </header>

        {# Zone de création de post #}
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
            <form method="post" action="{{ path('home') }}" class="flex gap-4">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 font-bold">
                        {{ app.user.pseudo|first|upper }}
                    </div>
                </div>
                <div class="flex-grow space-y-3">
                    <textarea 
                        name="content" 
                        rows="2" 
                        placeholder="Quoi de neuf, {{ app.user.pseudo }} ?" 
                        class="w-full bg-transparent border-none focus:ring-0 text-lg placeholder-gray-400 resize-none p-0"
                    ></textarea>
                    
                    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                        <div class="flex items-center gap-2 text-blue-500">
                            {# Icones actions (Image, Gif, Poll, Emoji) - Décoratifs pour l'instant #}
                            <button type="button" class="p-2 hover:bg-blue-50 rounded-full transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            </button>
                        </div>
                        <button type="submit" class="bg-slate-800 hover:bg-slate-900 text-white font-bold py-2 px-6 rounded-full transition-colors shadow-md shadow-slate-200">
                            Poster
                        </button>
                    </div>
                </div>
            </form>
        </div>

        {# Fil d'actualité #}
        <div class="space-y-4">
            {% for post in posts %}
                <article class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow cursor-pointer">
                    <div class="flex gap-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 font-bold text-lg">
                                {{ post.author.pseudo|first|upper }}
                            </div>
                        </div>
                        <div class="flex-grow space-y-2">
                            <div class="flex items-center gap-2">
                                <span class="font-bold text-slate-800">{{ post.author.fullName|default(post.author.pseudo) }}</span>
                                <span class="text-gray-500 text-sm">@{{ post.author.pseudo }}</span>
                                <span class="text-gray-400 text-xs">• {{ post.createdAt|date('d M H:i') }}</span>
                            </div>
                            
                            <p class="text-slate-800 leading-relaxed">
                                {{ post.content|nl2br }}
                            </p>
                            
                            {# Actions du post (Like, Comment, etc) #}
                            <div class="flex items-center gap-8 pt-2 text-gray-500">
                                <button class="flex items-center gap-2 hover:text-blue-500 transition-colors group">
                                    <div class="p-2 rounded-full group-hover:bg-blue-50 transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 8 9 8z"></path></svg>
                                    </div>
                                    <span class="text-sm font-medium">0</span>
                                </button>
                                <button class="flex items-center gap-2 hover:text-green-500 transition-colors group">
                                    <div class="p-2 rounded-full group-hover:bg-green-50 transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>
                                    </div>
                                    <span class="text-sm font-medium">0</span>
                                </button>
                                <button class="flex items-center gap-2 hover:text-red-500 transition-colors group">
                                    <div class="p-2 rounded-full group-hover:bg-red-50 transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                                    </div>
                                    <span class="text-sm font-medium">0</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </article>
            {% else %}
                <div class="text-center py-12 text-gray-500">
                    <p class="text-lg">Aucun post pour le moment.</p>
                    <p class="text-sm">Soyez le premier à partager quelque chose !</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
