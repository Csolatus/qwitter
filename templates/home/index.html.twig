{% extends 'base.html.twig' %}

{% block title %}Qwitter{% endblock %}

{% block body %}
<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #4a4a4a;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        color: white;
    }
    .container {
        width: 100%;
        max-width: 400px;
        text-align: center;
        padding: 20px;
    }
    h1 {
        margin-bottom: 3rem;
        font-weight: 600;
        font-size: 1.5rem;
    }
    .input-group {
        margin-bottom: 2rem;
        text-align: left;
        position: relative;
    }
    label {
        display: block;
        background-color: #7b8fa3;
        color: white;
        padding: 5px 20px;
        border-radius: 10px;
        width: fit-content;
        position: absolute;
        top: -15px; /* Adjust to overlap or sit on top */
        left: 0;
        font-size: 1rem;
    }
    input {
        width: 100%;
        padding: 15px;
        padding-top: 15px;
        border-radius: 25px;
        border: none;
        background-color: #e6e9ed;
        outline: none;
        font-size: 1rem;
        box-sizing: border-box;
    }
    
    /* Small bar simulation inside input */
    .input-bar {
        height: 5px;
        width: 30px;
        background-color: #8c9095;
        border-radius: 5px;
        margin-top: 10px;
        margin-left: 15px;
    }

    .btn-primary {
        background-color: #4285f4;
        color: white;
        border: none;
        padding: 10px 40px;
        border-radius: 20px;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 10px;
        font-weight: 500;
    }
    .btn-primary:hover {
        background-color: #3367d6;
    }

    .google-btn {
        background-color: #222;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 8px 20px;
        border-radius: 20px;
        text-decoration: none;
        margin: 0 auto 20px auto;
        width: fit-content;
        border: 1px solid #333;
    }
    
    .switch-link {
        display: block;
        margin-top: 15px;
        color: white;
        text-decoration: underline;
        cursor: pointer;
        font-size: 0.9rem;
    }
</style>

<div class="container">
    {% if error %}
        <div style="color: #ff6b6b; margin-bottom: 20px;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <!-- Login Form -->
    <div id="login-section">
        <h1>Se connecter Ã  Qwitter</h1>
        <form method="post" action="{{ path('home') }}">
            <div class="input-group">
                <label>Email</label>
                <input type="email" name="_username" value="{{ last_username }}" required autofocus>
                <div class="input-bar"></div>
            </div>
            <div class="input-group">
                <label>Mot de passe</label>
                <input type="password" name="_password" required>
                <div class="input-bar"></div>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <a href="#" class="google-btn">
                <span style="font-weight:bold; color:#4285f4;">G</span>
                 Se connecter avec google
            </a>

            <button type="submit" class="btn-primary">Se connecter</button>
        </form>
        <a class="switch-link" onclick="toggleForms()">S'inscrire</a>
    </div>

    <!-- Register Form -->
    <div id="register-section" style="display: none;">
        <h1>S'inscrire sur Qwitter</h1>
        <form method="post" action="{{ path('app_register') }}">
            <div class="input-group">
                <label>Email</label>
                <input type="email" name="email" required>
                <div class="input-bar"></div>
            </div>
             <div class="input-group">
                <label>Mot de passe</label>
                <input type="password" name="password" required>
                <div class="input-bar"></div>
            </div>
            <div class="input-group">
                <label>Nom complet</label>
                <input type="text" name="nom_complet">
                <div class="input-bar"></div>
            </div>
             <div class="input-group">
                <label>Pseudo</label>
                <input type="text" name="pseudo" required>
                <div class="input-bar"></div>
            </div>

            <button type="submit" class="btn-primary">S'inscrire</button>
        </form>
        <a class="switch-link" onclick="toggleForms()">Se connecter</a>
    </div>
</div>

<script>
    function toggleForms() {
        var login = document.getElementById('login-section');
        var register = document.getElementById('register-section');
        if (login.style.display === 'none') {
            login.style.display = 'block';
            register.style.display = 'none';
        } else {
            login.style.display = 'none';
            register.style.display = 'block';
        }
    }
</script>
{% endblock %}
