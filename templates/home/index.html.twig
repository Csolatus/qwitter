{% extends 'base_headless.html.twig' %}

{% block title %}Qwitter - Connexion / Inscription{% endblock %}

{% block body %}
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl overflow-hidden">
        {# Section d'erreur #}
        {% if error %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        {# Conteneur principal #}
        <div class="p-8">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-slate-800 mb-2">Qwitter</h1>
                <p class="text-gray-500">Rejoignez la conversation dès aujourd'hui.</p>
            </div>

            {# Formulaire de connexion #}
            <div id="sectionConnexion">
                <h2 class="text-xl font-semibold text-gray-800 mb-6 text-center">Se connecter</h2>
                <form method="post" action="{{ path('home') }}" class="space-y-4">
                    <div>
                        <label for="loginEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" id="loginEmail" name="_username" value="{{ last_username }}" required autofocus
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="votre@email.com">
                    </div>
                    <div>
                        <label for="loginPassword" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
                        <input type="password" id="loginPassword" name="_password" required
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="••••••••">
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="w-full bg-slate-800 hover:bg-slate-900 text-white font-bold py-3 px-4 rounded-xl transition-colors shadow-lg shadow-slate-200">
                        Se connecter
                    </button>
                    

                </form>

                <div class="mt-6 text-center">
                    <p class="text-gray-600 text-sm">Pas encore de compte ?</p>
                    <button onclick="basculerFormulaires()" class="mt-2 text-blue-600 hover:text-blue-800 font-semibold transition-colors">
                        S'inscrire sur Qwitter
                    </button>
                </div>
            </div>

            {# Formulaire d'inscription #}
            <div id="sectionInscription" class="hidden">
                <h2 class="text-xl font-semibold text-gray-800 mb-6 text-center">Créer un compte</h2>
                <form method="post" action="{{ path('app_register') }}" class="space-y-4">
                    <div>
                        <label for="registerPseudo" class="block text-sm font-medium text-gray-700 mb-1">Pseudo</label>
                        <input type="text" id="registerPseudo" name="pseudo" required
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="@pseudo">
                    </div>
                    <div>
                        <label for="registerEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" id="registerEmail" name="email" required
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="votre@email.com">
                    </div>
                    <div>
                        <label for="registerNomComplet" class="block text-sm font-medium text-gray-700 mb-1">Nom complet</label>
                        <input type="text" id="registerNomComplet" name="nom_complet"
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="Jean Dupont">
                    </div>
                    <div>
                        <label for="registerPassword" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
                        <input type="password" id="registerPassword" name="password" required
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                               placeholder="••••••••">
                    </div>

                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-xl transition-colors shadow-lg shadow-blue-200">
                        S'inscrire
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-gray-600 text-sm">Déjà un compte ?</p>
                    <button onclick="basculerFormulaires()" class="mt-2 text-slate-600 hover:text-slate-800 font-semibold transition-colors">
                        Se connecter
                    </button>
                </div>
            </div>
        </div>
    </div>

<script>
    /**
     * Bascule l'affichage entre le formulaire de connexion et d'inscription
     */
    function basculerFormulaires() {
        const sectionConnexion = document.getElementById('sectionConnexion');
        const sectionInscription = document.getElementById('sectionInscription');
        
        if (sectionConnexion.classList.contains('hidden')) {
            // Afficher connexion
            sectionConnexion.classList.remove('hidden');
            sectionInscription.classList.add('hidden');
        } else {
            // Afficher inscription
            sectionConnexion.classList.add('hidden');
            sectionInscription.classList.remove('hidden');
        }
    }
</script>
{% endblock %}

