            </div>

            <!-- Menu Principal -->
            <nav class="space-y-1">
                <a href="{{ path('app_accueil') }}" class="flex items-center gap-3 px-4 py-3 {{ app.request.attributes.get('_route') == 'app_accueil' ? 'bg-slate-800 text-white shadow-lg shadow-slate-200' : 'text-gray-500 hover:bg-gray-50 hover:text-slate-800' }} rounded-xl transition-all group">
                    <div class="w-5 h-5 {{ app.request.attributes.get('_route') == 'app_accueil' ? 'bg-white/20' : 'bg-gray-200' }} rounded-md group-hover:bg-slate-200 transition-colors"></div>
