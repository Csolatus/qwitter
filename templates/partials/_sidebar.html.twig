                    <div class="w-4 h-4 bg-white/20 rounded flex items-center justify-center text-xs">+</div>
                    <span>Poster</span>
                </button>
            {% else %}
                 <!-- Bouton Se Connecter (Invité) -->
                <a href="{{ path('app_login') }}" class="mt-8 w-full bg-slate-800 text-white py-3 rounded-xl font-medium shadow-lg shadow-slate-200 hover:bg-slate-900 transition-colors flex items-center justify-center gap-2">
