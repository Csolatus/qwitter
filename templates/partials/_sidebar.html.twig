                    <span class="font-medium">Nous Contacter</span>
                </a>
                <!-- Lien Actif -->
                <a href="{{ path('app_parametres') }}" class="flex items-center gap-3 px-4 py-3 {{ app.request.attributes.get('_route') == 'app_parametres' ? 'bg-slate-800 text-white shadow-lg shadow-slate-200' : 'text-gray-500 hover:bg-gray-50 hover:text-slate-800' }} rounded-xl transition-all">
