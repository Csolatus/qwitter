                    <div class="w-5 h-5 {{ app.request.attributes.get('_route') == 'app_notifications' ? 'bg-white/20' : 'bg-gray-200' }} rounded-md group-hover:bg-slate-200 transition-colors"></div>
                    <span class="font-medium">Notifications</span>
