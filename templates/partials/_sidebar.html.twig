                    <span class="font-medium">Découvrir</span>
                </a>
                <a href="{{ path('app_message_index') }}" class="flex items-center gap-3 px-4 py-3 {{ app.request.attributes.get('_route') == 'app_message_index' ? 'bg-slate-800 text-white shadow-lg shadow-slate-200' : 'text-gray-500 hover:bg-gray-50 hover:text-slate-800' }} rounded-xl transition-all group">
