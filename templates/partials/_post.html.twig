<article onclick="window.location='{{ path('app_post_show', {'id': post.id}) }}'" class="p-4 border-b border-gray-100 hover:bg-gray-50 transition cursor-pointer flex gap-4">
    {# Logic to handle Reposts #}
    {% set displayPost = post %}
    {% set isRepost = false %}
    
    {% if post.originalPost %}
        {% set displayPost = post.originalPost %}
        {% set isRepost = true %}
    {% endif %}

    <!-- Avatar Auteur Post -->
    <div class="flex flex-col items-end">
        {% if isRepost %}
            <div class="text-xs text-gray-500 mb-1 flex items-center justify-end w-10 mr-[-4px]">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
                </svg>
            </div>
        {% endif %}
        <div class="w-10 h-10 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden relative z-10" onclick="event.stopPropagation(); window.location='{{ path('app_profile', {'slug': displayPost.author.slug}) }}'">
            {% include 'partials/_avatar.html.twig' with {'user': displayPost.author, 'size': 'w-full h-full'} %}
        </div>
    </div>
    
    <!-- Contenu -->
    <div class="flex-1 min-w-0">
        {% if isRepost %}
            <div class="text-xs text-gray-500 font-bold mb-1 flex items-center gap-1">
                <a href="{{ path('app_profile', {'slug': post.author.slug}) }}" class="hover:underline" onclick="event.stopPropagation()">{{ post.author.fullName }}</a> a republié
            </div>
        {% endif %}

        <div class="flex justify-between items-start">
            <div class="flex items-center gap-1 mb-0.5 max-w-full overflow-hidden">
                <a href="{{ path('app_profile', {'slug': displayPost.author.slug}) }}" class="font-bold text-slate-900 hover:underline truncate" onclick="event.stopPropagation()">{{ displayPost.author.fullName }}</a>
                <span class="text-gray-500 text-sm truncate">@{{ displayPost.author.pseudo }}</span>
                <span class="text-gray-500 text-sm flex-shrink-0">· {{ displayPost.createdAt|date('d M') }}</span>
            </div>
            <div class="flex gap-2 flex-shrink-0">
                    <!-- Delete Button (Only for Author of the ACTUAL post record (repost or original) or Admin) -->
                {% if app.user and (post.author == app.user or is_granted('ROLE_ADMIN')) %}
                    <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');" onclick="event.stopPropagation()">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button class="text-gray-400 hover:text-red-600 rounded-full p-2 hover:bg-red-50 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </button>
                    </form>
                {% endif %}
                <button class="text-gray-400 hover:text-slate-600 rounded-full p-2 hover:bg-blue-50 transition" onclick="event.stopPropagation()">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM18.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                    </svg>
                </button>
            </div>
        </div>
        
        <p class="text-slate-800 leading-normal text-[15px] whitespace-pre-wrap break-words">{{ displayPost.content }}</p>

        {% if displayPost.imageFilename %}
            <div class="mt-3 rounded-2xl overflow-hidden border border-gray-100">
                <img src="{{ asset('uploads/posts/' ~ displayPost.imageFilename) }}" alt="Post image" class="w-full h-auto">
            </div>
        {% endif %}

        {% if displayPost.poll %}
            {% set totalVotes = 0 %}
            {% set hasVoted = false %}
            {% for option in displayPost.poll.options %}
                {% set totalVotes = totalVotes + option.voters|length %}
                {% if app.user and option.voters|filter(v => v == app.user)|length > 0 %}
                    {% set hasVoted = true %}
                {% endif %}
            {% endfor %}

            <div class="mt-3 border border-gray-100 rounded-xl p-3" onclick="event.stopPropagation()">
                <div class="font-bold text-slate-800 mb-2">{{ displayPost.poll.question }}</div>
                <div class="space-y-2">
                    {% for option in displayPost.poll.options %}
                        {% if hasVoted %}
                            {% set percent = totalVotes > 0 ? (option.voters|length / totalVotes * 100)|round : 0 %}
                            <div class="relative w-full rounded-lg overflow-hidden h-10 bg-gray-100 flex items-center px-4">
                                <div class="absolute top-0 left-0 h-full bg-blue-200 transition-all duration-500" style="width: {{ percent }}%"></div>
                                <span class="relative z-10 font-bold text-slate-700 flex-1">{{ option.label }}</span>
                                <span class="relative z-10 text-sm font-medium text-slate-600">{{ percent }}%</span>
                            </div>
                        {% else %}
                            <form action="{{ path('app_poll_vote', {'id': option.id}) }}" method="post">
                                <button type="submit" class="w-full text-left px-4 py-2 rounded-lg border border-blue-200 text-blue-500 font-bold hover:bg-blue-50 transition relative overflow-hidden group">
                                   <span class="relative z-10">{{ option.label }}</span>
                                </button>
                            </form>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="text-xs text-gray-500 mt-2 flex justify-between items-center">
                    <span>{{ totalVotes }} votes · Fin dans {{ displayPost.poll.endsAt is defined ? displayPost.poll.endsAt|date('H') ~ 'h' : '24h' }}</span>
                    {% if hasVoted %}
                        <form action="{{ path('app_poll_remove_vote', {'id': displayPost.poll.id}) }}" method="post" onsubmit="return confirm('Retirer votre vote ?');">
                             <button type="submit" class="text-red-500 hover:text-red-700 hover:underline transition">Retirer mon vote</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <!-- Actions -->
        <div class="flex justify-between mt-3 max-w-[350px] text-gray-500" onclick="event.stopPropagation()">
            <button onclick="toggleCommentForm({{ post.id }})" class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                <div class="p-2 rounded-full group-hover:bg-blue-50 transition text-gray-500 group-hover:text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z" />
                    </svg>
                </div>
                <span>{{ displayPost.comments|length }}</span>
            </button>
            
            <form method="post" action="{{ path('app_post_repost', {'id': displayPost.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('repost' ~ displayPost.id) }}">
                <button type="submit" class="flex items-center gap-1 hover:text-green-500 group text-sm transition">
                    <div class="p-2 rounded-full group-hover:bg-green-50 transition text-gray-500 group-hover:text-green-500">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
                        </svg>
                    </div>
                    <span>{{ displayPost.reposts|length }}</span>
                </button>
            </form>

            <a href="{{ path('app_post_like', {'id': displayPost.id}) }}" class="flex items-center gap-1 {{ displayPost.likes|filter(l => l.user == app.user)|length > 0 ? 'text-pink-600' : 'hover:text-pink-500' }} group text-sm transition">
                <div class="p-2 rounded-full group-hover:bg-pink-50 transition">
                    {% if displayPost.likes|filter(l => l.user == app.user)|length > 0 %}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-pink-600">
                          <path d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
                        </svg>
                    {% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 group-hover:text-pink-500">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                        </svg>
                    {% endif %}
                </div>
                <span>{{ displayPost.likes|length }}</span>
            </a>
            <button class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                <div class="p-2 rounded-full group-hover:bg-blue-50 transition text-gray-500 group-hover:text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                    </svg>
                </div>
                <span>0</span>
            </button>
        </div>

        <!-- Comment Form (Hidden by default) -->
        <div id="comment-form-{{ post.id }}" class="hidden mt-4 pt-4 border-t border-gray-100" onclick="event.stopPropagation()">
            <form action="{{ path('app_comment_add', {'id': displayPost.id}) }}" method="post" class="flex gap-2">
                <input type="text" name="content" placeholder="Postez votre réponse" required
                        class="flex-1 bg-gray-100 border-none rounded-full px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:bg-white transition placeholder-gray-500 text-slate-800">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-full font-bold text-sm hover:bg-blue-600 transition">Répondre</button>
            </form>
        </div>
    </div>
</article>
