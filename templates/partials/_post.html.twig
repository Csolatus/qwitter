<article onclick="window.location='{{ path('app_post_show', {'id': post.id}) }}'" class="p-4 border-b border-gray-100 hover:bg-gray-50 transition cursor-pointer flex gap-4">
    {# Logic to handle Reposts #}
    {% set displayPost = post %}
    {% set isRepost = false %}
    
    {% if post.originalPost %}
        {% set displayPost = post.originalPost %}
        {% set isRepost = true %}
    {% endif %}

    <!-- Avatar Auteur Post -->
    <div class="flex flex-col items-end">
        {% if isRepost %}
            <div class="text-xs text-gray-500 mb-1 flex items-center justify-end w-10 mr-[-4px]">
                <span class="mr-1">üîÅ</span>
            </div>
        {% endif %}
        <div class="w-10 h-10 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden relative z-10" onclick="event.stopPropagation(); window.location='{{ path('app_profile', {'id': displayPost.author.id}) }}'">
            {% if displayPost.author.avatar %}
                <img src="{{ asset('uploads/avatars/' ~ displayPost.author.avatar) }}" class="w-full h-full object-cover">
            {% else %}
                <img src="https://ui-avatars.com/api/?name={{ displayPost.author.pseudo }}&background=random" class="w-full h-full object-cover">
            {% endif %}
        </div>
    </div>
    
    <!-- Contenu -->
    <div class="flex-1 min-w-0">
        {% if isRepost %}
            <div class="text-xs text-gray-500 font-bold mb-1 flex items-center gap-1">
                <a href="{{ path('app_profile', {'id': post.author.id}) }}" class="hover:underline" onclick="event.stopPropagation()">{{ post.author.fullName }}</a> a republi√©
            </div>
        {% endif %}

        <div class="flex justify-between items-start">
            <div class="flex items-center gap-1 mb-0.5 max-w-full overflow-hidden">
                <a href="{{ path('app_profile', {'id': displayPost.author.id}) }}" class="font-bold text-slate-900 hover:underline truncate" onclick="event.stopPropagation()">{{ displayPost.author.fullName }}</a>
                <span class="text-gray-500 text-sm truncate">@{{ displayPost.author.pseudo }}</span>
                <span class="text-gray-500 text-sm flex-shrink-0">¬∑ {{ displayPost.createdAt|date('d M') }}</span>
            </div>
            <div class="flex gap-2 flex-shrink-0">
                    <!-- Delete Button (Only for Author of the ACTUAL post record (repost or original) or Admin) -->
                {% if app.user and (post.author == app.user or is_granted('ROLE_ADMIN')) %}
                    <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce post ?');" onclick="event.stopPropagation()">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button class="text-gray-400 hover:text-red-600 rounded-full p-1 hover:bg-red-50 transition">üóëÔ∏è</button>
                    </form>
                {% endif %}
                <button class="text-gray-400 hover:text-slate-600 rounded-full p-1 hover:bg-blue-50 transition" onclick="event.stopPropagation()">‚Ä¢‚Ä¢‚Ä¢</button>
            </div>
        </div>
        
        <p class="text-slate-800 leading-normal text-[15px] whitespace-pre-wrap break-words">{{ displayPost.content }}</p>

        {% if displayPost.imageFilename %}
            <div class="mt-3 rounded-2xl overflow-hidden border border-gray-100 max-h-[400px]">
                <img src="{{ asset('uploads/posts/' ~ displayPost.imageFilename) }}" alt="Post image" class="w-full h-full object-cover">
            </div>
        {% endif %}

        <!-- Actions -->
        <div class="flex justify-between mt-3 max-w-[350px] text-gray-500" onclick="event.stopPropagation()">
            <button onclick="toggleCommentForm({{ post.id }})" class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                <div class="p-1.5 rounded-full group-hover:bg-blue-50 transition">üí¨</div>
                <span>{{ displayPost.comments|length }}</span>
            </button>
            
            <form method="post" action="{{ path('app_post_repost', {'id': displayPost.id}) }}">
                <button class="flex items-center gap-1 hover:text-green-500 group text-sm transition">
                    <div class="p-1.5 rounded-full group-hover:bg-green-50 transition">üîÅ</div>
                    <span>{{ displayPost.reposts|length }}</span>
                </button>
            </form>

            <a href="{{ path('app_post_like', {'id': displayPost.id}) }}" class="flex items-center gap-1 {{ displayPost.likes|filter(l => l.user == app.user)|length > 0 ? 'text-pink-600' : 'hover:text-pink-500' }} group text-sm transition">
                <div class="p-1.5 rounded-full group-hover:bg-pink-50 transition">
                    {{ displayPost.likes|filter(l => l.user == app.user)|length > 0 ? '‚ù§Ô∏è' : '‚ô°' }}
                </div>
                <span>{{ displayPost.likes|length }}</span>
            </a>
            <button class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                <div class="p-1.5 rounded-full group-hover:bg-blue-50 transition">üìä</div>
                <span>0</span>
            </button>
        </div>

        <!-- Comment Form (Hidden by default) -->
        <div id="comment-form-{{ post.id }}" class="hidden mt-4 pt-4 border-t border-gray-100" onclick="event.stopPropagation()">
            <form action="{{ path('app_comment_add', {'id': displayPost.id}) }}" method="post" class="flex gap-2">
                <input type="text" name="content" placeholder="Postez votre r√©ponse" required
                        class="flex-1 bg-gray-100 border-none rounded-full px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:bg-white transition placeholder-gray-500 text-slate-800">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-full font-bold text-sm hover:bg-blue-600 transition">R√©pondre</button>
            </form>
        </div>
    </div>
</article>
