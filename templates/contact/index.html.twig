{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl">
        
        {# En-tête du formulaire #}
        <div class="text-center">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight sm:text-4xl">
                Contactez-nous
            </h1>
            <p class="mt-4 text-lg text-gray-500">
                Une question ? Un projet ? Remplissez ce formulaire et nous vous répondrons sous 24h.
            </p>
        </div>

        {# Gestion des messages Flash (Succès/Erreur) #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 rounded-md {{ label == 'success' ? 'bg-green-50 text-green-700 border border-green-200' : 'bg-red-50 text-red-700 border border-red-200' }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Affichage du formulaire #}
        {{ form_start(contactForm, {'attr': {'class': 'space-y-6 mt-8'}}) }}
            
            <div>
                {{ form_label(contactForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(contactForm.name) }}
                {{ form_errors(contactForm.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div>
                {{ form_label(contactForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(contactForm.email) }}
                {{ form_errors(contactForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div>
                {{ form_label(contactForm.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(contactForm.subject) }}
                {{ form_errors(contactForm.subject, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div>
                {{ form_label(contactForm.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(contactForm.message) }}
                {{ form_errors(contactForm.message, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div class="pt-2">
                {{ form_widget(contactForm.submit) }}
            </div>

        {{ form_end(contactForm) }}

        {# Informations de contact supplémentaires (Optionnel) #}
        <div class="mt-8 pt-8 border-t border-gray-200 grid grid-cols-1 gap-4 sm:grid-cols-2 text-center sm:text-left">
            <div>
                <h3 class="text-sm font-semibold text-gray-500 tracking-wider uppercase">Email</h3>
                <p class="mt-1 text-gray-900">contact@votre-entreprise.com</p>
            </div>
            <div>
                <h3 class="text-sm font-semibold text-gray-500 tracking-wider uppercase">Téléphone</h3>
                <p class="mt-1 text-gray-900">+33 1 23 45 67 89</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
