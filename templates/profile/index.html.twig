{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }} - Qwitter{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto space-y-6">
        
        <!-- Carte de Profil -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <!-- Banni√®re (Placeholder pour l'instant) -->
            <div class="h-48 bg-slate-800 w-full relative">
                {# TODO: Ajouter image de banni√®re #}
            </div>

            <div class="px-8 pb-8">
                <div class="flex justify-between items-end -mt-12 mb-6">
                    <!-- Avatar -->
                    <div class="relative">
                        <div class="w-32 h-32 bg-white rounded-full p-1 shadow-lg">
                            <div class="w-full h-full bg-slate-100 rounded-full flex items-center justify-center overflow-hidden">
                                {% if user.avatar %}
                                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="{{ user.pseudo }}" class="w-full h-full object-cover">
                                {% else %}
                                    <span class="text-4xl">üë§</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div>
                        {% if is_me %}
                            <a href="{{ path('app_parametres') }}" class="px-4 py-2 border border-gray-300 text-gray-700 font-semibold rounded-full hover:bg-gray-50 transition-colors">
                                √âditer le profil
                            </a>
                        {% else %}
                             {# TODO: Bouton Suivre #}
                            <button class="px-6 py-2 bg-slate-800 text-white font-semibold rounded-full hover:bg-slate-900 transition-colors shadow-lg shadow-slate-200">
                                Suivre
                            </button>
                        {% endif %}
                    </div>
                </div>

                <!-- Infos Utilisateur -->
                <div class="space-y-4">
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">{{ user.fullName ?? user.pseudo }}</h1>
                        <p class="text-gray-500">@{{ user.pseudo }}</p>
                    </div>

                    {% if user.bio %}
                        <p class="text-gray-800 max-w-2xl leading-relaxed">
                            {{ user.bio }}
                        </p>
                    {% endif %}

                    <div class="flex items-center gap-6 text-gray-500 text-sm">
                        <div class="flex items-center gap-1">
                            <span class="text-slate-900 font-bold">142</span>
                            <span>abonnements</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <span class="text-slate-900 font-bold">1,2k</span>
                            <span>abonn√©s</span>
                        </div>
                         <div class="flex items-center gap-1">
                             <span class="text-2xl mr-1">üìÖ</span>
                            <span>A rejoint en {{ user.createdAt|date('F Y') }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Onglets du profil -->
        <div class="flex border-b border-gray-200">
            <button class="px-6 py-4 text-slate-900 font-semibold border-b-2 border-slate-900 hover:bg-gray-50 transition-colors">Posts</button>
            <button class="px-6 py-4 text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50 transition-colors">R√©ponses</button>
            <button class="px-6 py-4 text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50 transition-colors">M√©dias</button>
            <button class="px-6 py-4 text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50 transition-colors">J'aime</button>
        </div>

        <!-- Liste des posts -->
        <div class="space-y-0"> <!-- Removed spacing between posts relative to container, handle border in article -->
            {% for post in posts %}
                 <article class="p-4 border-b border-gray-100 hover:bg-gray-50 transition cursor-pointer flex gap-4 bg-white first:rounded-t-2xl last:rounded-b-2xl border-x border-t last:border-b-0">
                    <!-- Avatar Auteur Post -->
                    <div class="w-10 h-10 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden">
                        {% if post.author.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ post.author.avatar) }}" class="w-full h-full object-cover">
                        {% else %}
                            <img src="https://ui-avatars.com/api/?name={{ post.author.pseudo }}&background=random" class="w-full h-full object-cover">
                        {% endif %}
                    </div>
                    
                    <!-- Contenu -->
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center gap-1 mb-0.5">
                                <span class="font-bold text-slate-900 hover:underline">{{ post.author.fullName }}</span>
                                <span class="text-gray-500 text-sm">@{{ post.author.pseudo }}</span>
                                <span class="text-gray-500 text-sm">¬∑ {{ post.createdAt|date('d M') }}</span>
                            </div>
                            <div class="flex gap-2">
                                    <!-- Delete Button (Only for Author or Admin) -->
                                {% if app.user and (post.author == app.user or is_granted('ROLE_ADMIN')) %}
                                    <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce post ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                        <button class="text-gray-400 hover:text-red-600 rounded-full p-1 hover:bg-red-50 transition">üóëÔ∏è</button>
                                    </form>
                                {% endif %}
                                <button class="text-gray-400 hover:text-slate-600 rounded-full p-1 hover:bg-blue-50 transition">‚Ä¢‚Ä¢‚Ä¢</button>
                            </div>
                        </div>
                        
                        <p class="text-slate-800 leading-normal text-[15px] whitespace-pre-wrap">{{ post.content }}</p>

                        {% if post.imageFilename %}
                            <div class="mt-3 rounded-2xl overflow-hidden border border-gray-100 max-h-[400px]">
                                <img src="{{ asset('uploads/posts/' ~ post.imageFilename) }}" alt="Post image" class="w-full h-full object-cover">
                            </div>
                        {% endif %}

                        <!-- Actions -->
                        <div class="flex justify-between mt-3 max-w-[350px] text-gray-500">
                            <button class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                                <div class="p-1.5 rounded-full group-hover:bg-blue-50 transition">üí¨</div>
                                <span>0</span>
                            </button>
                            <button class="flex items-center gap-1 hover:text-green-500 group text-sm transition">
                                <div class="p-1.5 rounded-full group-hover:bg-green-50 transition">üîÅ</div>
                                <span>0</span>
                            </button>
                            <a href="{{ path('app_post_like', {'id': post.id}) }}" class="flex items-center gap-1 {{ post.likes|filter(l => l.user == app.user)|length > 0 ? 'text-pink-600' : 'hover:text-pink-500' }} group text-sm transition">
                                <div class="p-1.5 rounded-full group-hover:bg-pink-50 transition">
                                    {{ post.likes|filter(l => l.user == app.user)|length > 0 ? '‚ù§Ô∏è' : '‚ô°' }}
                                </div>
                                <span>{{ post.likes|length }}</span>
                            </a>
                            <button class="flex items-center gap-1 hover:text-blue-500 group text-sm transition">
                                <div class="p-1.5 rounded-full group-hover:bg-blue-50 transition">üìä</div>
                                <span>0</span>
                            </button>
                        </div>
                    </div>
                </article>
            {% else %}
                <div class="bg-white p-10 text-center rounded-2xl border border-gray-100">
                    <p class="text-gray-500 text-lg">Aucun post pour le moment.</p>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
