{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }} - Qwitter{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto space-y-6">
        
        <!-- Carte de Profil -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <!-- Banni√®re (Placeholder pour l'instant) -->
            <div class="h-48 bg-slate-800 w-full relative">
                {# TODO: Ajouter image de banni√®re #}
            </div>

            <div class="px-8 pb-8">
                <div class="flex justify-between items-end -mt-12 mb-6">
                    <!-- Avatar -->
                    <div class="relative">
                        <div class="w-32 h-32 bg-white rounded-full p-1 shadow-lg">
                            <div class="w-full h-full bg-slate-100 rounded-full flex items-center justify-center overflow-hidden">
                                {% include 'partials/_avatar.html.twig' with {'user': user, 'size': 'w-full h-full'} %}
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div>
                        {% if is_me %}
                            <a href="{{ path('app_parametres') }}" class="px-4 py-2 border border-gray-300 text-gray-700 font-semibold rounded-full hover:bg-gray-50 transition-colors">
                                √âditer le profil
                            </a>
                        {% else %}
                            <form action="{{ path('app_follow', {'id': user.id}) }}" method="post">
                                <input type="hidden" name="_token" value="{{ csrf_token('follow' ~ user.id) }}">
                                {% if app.user and app.user.isFollowing(user) %}
                                    <button type="submit" class="group px-6 py-2 border border-gray-300 text-slate-900 font-semibold rounded-full hover:bg-red-50 hover:border-red-200 hover:text-red-600 transition-all">
                                        <span class="group-hover:hidden">Abonn√©</span>
                                        <span class="hidden group-hover:inline">Se d√©sabonner</span>
                                    </button>
                                {% else %}
                                    <button type="submit" class="px-6 py-2 bg-slate-800 text-white font-semibold rounded-full hover:bg-slate-900 transition-colors shadow-lg shadow-slate-200">
                                        Suivre
                                    </button>
                                {% endif %}
                            </form>
                        {% endif %}
                    </div>
                </div>

                <!-- Infos Utilisateur -->
                <div class="space-y-4">
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">{{ user.fullName ?? user.pseudo }}</h1>
                        <p class="text-gray-500">@{{ user.pseudo }}</p>
                    </div>

                    {% if user.bio %}
                        <p class="text-gray-800 max-w-2xl leading-relaxed">
                            {{ user.bio }}
                        </p>
                    {% endif %}

                    <div class="flex items-center gap-6 text-gray-500 text-sm">
                        <div class="flex items-center gap-1">
                            <span class="text-slate-900 font-bold">{{ user.following|length }}</span>
                            <span>abonnements</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <span class="text-slate-900 font-bold">{{ user.followers|length }}</span>
                            <span>abonn√©s</span>
                        </div>
                         <div class="flex items-center gap-1">
                             <span class="text-2xl mr-1">üìÖ</span>
                            <span>A rejoint en {{ user.createdAt|date('F Y') }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Onglets du profil -->
        <div class="flex border-b border-gray-200">
            <a href="{{ path('app_profile', {'slug': user.slug, 'tab': 'posts'}) }}" class="px-6 py-4 {{ current_tab == 'posts' ? 'text-slate-900 font-bold border-b-2 border-slate-900' : 'text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50' }} transition-colors">Posts</a>
            <a href="{{ path('app_profile', {'slug': user.slug, 'tab': 'replies'}) }}" class="px-6 py-4 {{ current_tab == 'replies' ? 'text-slate-900 font-bold border-b-2 border-slate-900' : 'text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50' }} transition-colors">R√©ponses</a>
            <a href="{{ path('app_profile', {'slug': user.slug, 'tab': 'likes'}) }}" class="px-6 py-4 {{ current_tab == 'likes' ? 'text-slate-900 font-bold border-b-2 border-slate-900' : 'text-gray-500 font-medium hover:text-slate-900 hover:bg-gray-50' }} transition-colors">J'aime</a>
        </div>

        <!-- Liste du contenu -->
        <div class="space-y-0">
            {% if is_private_access_denied %}
                 <div class="bg-white p-16 text-center rounded-2xl border border-gray-100 mt-4 flex flex-col items-center justify-center">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h2 class="text-xl font-bold text-slate-900 mb-2">Ce compte est priv√©</h2>
                    <p class="text-gray-500">Suivez ce compte pour voir ses posts et photos.</p>
                </div>
            {% elseif data is empty %}
                <div class="bg-white p-10 text-center rounded-2xl border border-gray-100 mt-4">
                    <p class="text-gray-500 text-lg">Rien √† afficher ici pour le moment.</p>
                </div>
            {% else %}
                {% if current_tab == 'replies' %}
                    {# Affichage des Commentaires (R√©ponses) #}
                    {% for comment in data %}
                        <div class="p-4 border-b border-gray-100 hover:bg-gray-50 transition flex gap-4 bg-white">
                             <div class="w-10 h-10 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden">
                                {% include 'partials/_avatar.html.twig' with {'user': comment.author, 'size': 'w-full h-full'} %}
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="font-bold text-slate-900">{{ comment.author.fullName }}</span>
                                    <span class="text-gray-500 text-sm">@{{ comment.author.pseudo }}</span>
                                    <span class="text-gray-500 text-sm">¬∑ {{ comment.createdAt|date('d M') }}</span>
                                    <span class="text-gray-400 text-sm">en r√©ponse √† un post</span>
                                </div>
                                <p class="text-slate-800">{{ comment.content }}</p>
                                <div class="mt-2 text-blue-500 text-sm hover:underline cursor-pointer">
                                    Voir le post original
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    {# Affichage des Posts (Posts ou J'aime) #}
                    {% for post in data %}
                        {% include 'partials/_post.html.twig' with {'post': post} %}
                    {% endfor %}
                {% endif %}
            {% endif %}
        </div>

    </div>
{% endblock %}
